{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "type": {"type": "string"},
        "shcemaLocation": {"type": "string"},
        "schemaVersion": {"type": "string"},
        "generator": {
            "type": "object",
            "properties": {
                "app": {"type": "string"},
                "version": {"type": "string"},
                "generatedAt": {"type": "string"}
            },
            "required": ["app","version"]
        },
        "content": {
            "type": "object",
            "manual":{"$ref": "#/definitions/manual"}
        }
    },
    "definitions": {
        "manual" :{
            "type": "object",
            "properties": {
                "publisher": {"type": "string"},
                "publishedAt": {"type": "string"},
                "title": {"type": "string"},
                "sections": {"$ref": "#/definitions/sections"}
            },
            "required": ["sections","title","publisher"]
        },
        "section" :{
            "type": "object",
            "properties": {
                "page": { "type": "string"},
                "header": { "type": "string"},
                "paragraphs":{"$ref": "#/definitions/paragraph"},
                "sections": {"$ref": "#/definitions/sections"}
            },
            "required": ["paragraphs","page"]
        },
        "paragraph" :{
            "type": "object",
            "properties": {
                "page": {"type": "string"},
                "text": {"type": "string"}
            },
            "required": ["text", "page"]
        }
    }
}